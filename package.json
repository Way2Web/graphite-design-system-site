{
  "name": "way2web-design-system-site",
  "version": "0.1.0",
  "description": "Way2web design system",
  "scripts": {
    "build-dev:webpack": "webpack",
    "watch:webpack": "webpack --watch",
    "watch:eleventy": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "dev": "npm-run-all clean build-dev:webpack --parallel watch:*",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode production",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "build": "run-s clean build:*",
    "serve:local": "serve _site",
    "serve": "run-s build serve:local",
    "clean": "rimraf _site",
    "format:js": "prettier '**/*.js' --write && eslint '**/*.js' --fix",
    "format:json": "prettier '**/*.json' --write",
    "format": "run-s format:*",
    "lint": "eslint --ext .js ."
  },
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@tailwindcss/postcss7-compat": "^2.1.0",
    "autoprefixer": "^9.8.6",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^4.2.1",
    "cssnano": "^4.1.11",
    "date-fns": "^2.22.1",
    "eleventy-plugin-lazyimages": "^2.0.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "file-loader": "^6.0.0",
    "glob": "^7.1.7",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^4.3.8",
    "image-webpack-loader": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "serve": "^12.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-fix-style-only-entries": "^0.5.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@w2wds/core": "^0.5.1"
  }
}
